{{#mobile-pane/scroller
  activeIndex=activeIndex
  lazyRendering=lazyRendering
  keepRendered=keepRendered
  transitionDuration=transitionDuration
  triggerVelocity=triggerVelocity

  activePane=activePane
  paneContainerElement=paneContainerElement
  paneCount=paneCount
  currentOffset=currentOffset
  visiblePanes=visiblePanes

  onDragStart=(action 'onDragStart')
  onDragMove=(action 'onDragMove')
  onDragEnd=(action 'onDragEnd')
as |mps|}}
  {{#if previousModel}}
    {{#mps.pane}}
      {{#mobile-pane/infinite-scroller/child
        class="mobile-pane__child--previous"
        offsetTop=childOffsetTop
        scroll=prevChildScroll
      }}
        {{~yield (hash
          model=previousModel
          isCurrentModel=false
        ) ~}}
      {{/mobile-pane/infinite-scroller/child}}
    {{/mps.pane}}
  {{/if}}

  {{#mps.pane}}
    {{#mobile-pane/infinite-scroller/child
      class="mobile-pane__child--current"
      scroll=currentChildScroll
      setAsDocumentScroll=true
    }}
      {{~yield (hash
        model=currentModel
        isCurrentModel=true
      ) ~}}
    {{/mobile-pane/infinite-scroller/child}}
  {{/mps.pane}}

  {{#if nextModel}}
    {{#mps.pane}}
      {{#mobile-pane/infinite-scroller/child
        class="mobile-pane__child--next"
        offsetTop=childOffsetTop
        scroll=nextChildScroll
      }}
        {{~yield (hash
          model=nextModel
          isCurrentModel=false
        ) ~}}
      {{/mobile-pane/infinite-scroller/child}}
    {{/mps.pane}}
  {{/if}}
{{/mobile-pane/scroller}}