<div class="gesture-slider-container" style="{{containerStyle}}">
  {{#if previousModel}}
    <div class="gesture-slider-child previous" style="{{scrollOffset}}">
      {{~yield previousModel ~}}
    </div>
  {{/if}}

  <div class="gesture-slider-child current">
    {{~yield currentModel ~}}
  </div>

  {{#if nextModel}}
    <div class="gesture-slider-child next" style="{{scrollOffset}}">
      {{~yield nextModel ~}}
    </div>
  {{/if}}
</div>